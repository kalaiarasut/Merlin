# Application
NODE_ENV=development
APP_NAME=CMLRE Marine Data Platform
APP_URL=http://localhost:3000
API_URL=http://localhost:5000

# Server Configuration
BACKEND_PORT=5000
FRONTEND_PORT=3000
AI_SERVICES_PORT=8000

# Database - PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=cmlre_marine
POSTGRES_USER=cmlre_admin
POSTGRES_PASSWORD=your_secure_password_here

# Database - MongoDB
MONGODB_URI=mongodb://localhost:27017/cmlre_marine
MONGODB_USER=cmlre_admin
MONGODB_PASSWORD=your_secure_password_here

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# MinIO / S3 Storage
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=cmlre-data
MINIO_USE_SSL=false

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_jwt_refresh_secret_change_this
JWT_REFRESH_EXPIRES_IN=7d

# AI Services
AI_SERVICE_URL=http://localhost:8000
TESSERACT_PATH=/usr/bin/tesseract
BLAST_PATH=/usr/bin/blastn
KRAKEN2_DB_PATH=/data/kraken2_db

# LLM Configuration (Local)
LLM_MODEL=llama3
LLM_MODEL_PATH=./ai-services/models/llama-3-8b.gguf
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.7

# External APIs (Optional)
GBIF_API_KEY=
OBIS_API_KEY=
WORMS_API_URL=https://www.marinespecies.org/rest

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@cmlre.gov.in

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=500MB
ALLOWED_FILE_TYPES=csv,xlsx,json,pdf,jpg,jpeg,png,tiff,fasta,fastq,zip

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# CORS
CORS_ORIGIN=http://localhost:3000

# Session
SESSION_SECRET=your_session_secret_change_this
SESSION_MAX_AGE=86400000

# Workers
WORKER_CONCURRENCY=4
QUEUE_NAME=cmlre_jobs

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=365

# Admin Account
ADMIN_EMAIL=admin@cmlre.gov.in
ADMIN_PASSWORD=cmlre2024
ADMIN_NAME=CMLRE Administrator
